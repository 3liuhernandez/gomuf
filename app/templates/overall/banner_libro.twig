<script>
    let slide_i = 1;
    showBanner(slide_i);

    function SigBanner(n) {
        showBanner(slide_i += n);
    }

    function showBanner(n) {
        let i;
        let x = document.getElementsByClassName("slide_banner");
        if (n > x.length) {slide_i = 1}
        if (n < 1) {slide_i = x.length}
        for (i = 0; i < x.length; i++) {
            x[i].style.display = "none";
        }
        x[slide_i-1].style.display = "block";
    }
</script>
